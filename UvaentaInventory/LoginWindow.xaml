<Window x:Class="UvaentaInventory.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UvaentaInventory"
        mc:Ignorable="d"
        Title="MainWindow" Height="441" Width="268">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >

        <TextBlock Text="Добро пожаловать" FontWeight="Bold" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="txtLogin" Margin="16" HorizontalAlignment="Center" Width="174" materialDesign:HintAssist.Hint="Логин"/>
        <PasswordBox x:Name="txtPassword" Margin="16" HorizontalAlignment="Center" Width="174" materialDesign:HintAssist.Hint="Пароль"/>

        <Button x:Name="entered" Content="Войти" Foreground="White" HorizontalAlignment="Right" Click="entered_Click"/>

    </StackPanel>
</Window>
