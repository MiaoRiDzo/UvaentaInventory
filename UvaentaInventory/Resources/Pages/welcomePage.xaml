<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UvaentaInventory.Resources.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="UvaentaInventory.Resources.Pages.welcomePage"
      mc:Ignorable="d" 
      d:DesignHeight="320" d:DesignWidth="620"
      Title="welcomePage">

    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

        <materialDesign:Card x:Name="card" Padding="20" Background="White" BorderBrush="{Binding Background.Color, ElementName=card}">
            <StackPanel Orientation="Vertical">
                <Label Content="Добро пожаловать в систему"/>
                <Label x:Name="welcomeCard" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
        </materialDesign:Card>

    </StackPanel>
</Page>
